<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lou.itsi_authenticator.UserAreaAct">

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOKS"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_groups"
        android:layout_toStartOf="@+id/btn_groups"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="72dp" />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROUPS"
        android:layout_alignBaseline="@+id/btn_show"
        android:layout_alignBottom="@+id/btn_show"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_groups"
        android:layout_alignStart="@+id/btn_groups" />

    <Button
        android:id="@+id/btn_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Api Calls"
        android:layout_alignBaseline="@+id/btn_groups"
        android:layout_alignBottom="@+id/btn_groups"
        android:layout_toRightOf="@+id/btn_groups"
        android:layout_toEndOf="@+id/btn_groups"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp" />

</RelativeLayout>
